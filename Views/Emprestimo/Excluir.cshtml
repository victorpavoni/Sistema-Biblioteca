@model EmprestimosModel
@{
    ViewData["title"] = "Excluir Emprestimo";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir de Emprestimo</h1>
    </div>
    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for=Id />

        <h2 class="text-light">Tem certeza que deseja excluir o registro abaixo?</h2>

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem esta recebendo o livro?" disabled>
            <span asp-validation-for="Recebedor" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem esta emprestando o livro?" disabled>
            <span asp-validation-for="Fornecedor" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label text-light">Livro:</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual e o livro que esta sendo emprestado?" disabled>
            <span asp-validation-for="LivroEmprestado" class="text-danger"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>
